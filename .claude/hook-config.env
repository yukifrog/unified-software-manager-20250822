# Claude Code Hook Configuration
# このファイルをsourceして環境変数を設定してください: source .claude/hook-config.env

# 通知システム設定
export CLAUDE_NOTIFY_ENABLED="${CLAUDE_NOTIFY_ENABLED:-false}"
export CLAUDE_NOTIFY_LEVEL="${CLAUDE_NOTIFY_LEVEL:-important}"  # all, important, error-only
export CLAUDE_NOTIFY_MIN_DURATION="${CLAUDE_NOTIFY_MIN_DURATION:-30}"  # 秒
export CLAUDE_NOTIFY_QUIET_HOURS="${CLAUDE_NOTIFY_QUIET_HOURS:-23:59-05:55}"  # 静音時間帯

# Telegram Bot設定 (使用時は.env.telegramファイルで設定)
# export TELEGRAM_BOT_TOKEN="your_bot_token_here"
# export TELEGRAM_CHAT_ID="your_chat_id_here"
export SIGNAL_BOT_URL="${SIGNAL_BOT_URL:-}"

# バックアップ設定
export CLAUDE_BACKUP_DIR="${CLAUDE_BACKUP_DIR:-$HOME/.claude-backups}"
export CLAUDE_BACKUP_RETENTION_DAYS="${CLAUDE_BACKUP_RETENTION_DAYS:-30}"

# セキュリティスキャン設定
export CLAUDE_GITLEAKS_ENABLED="${CLAUDE_GITLEAKS_ENABLED:-true}"
export CLAUDE_SECURITY_SCAN_ENABLED="${CLAUDE_SECURITY_SCAN_ENABLED:-true}"

# テスト自動実行設定
export CLAUDE_AUTO_TEST_ENABLED="${CLAUDE_AUTO_TEST_ENABLED:-true}"
export CLAUDE_AUTO_TEST_TIMEOUT="${CLAUDE_AUTO_TEST_TIMEOUT:-60}"  # 秒

# CI/GitHub統合設定
export CLAUDE_GITHUB_INTEGRATION="${CLAUDE_GITHUB_INTEGRATION:-true}"
export CLAUDE_CI_MONITOR_ENABLED="${CLAUDE_CI_MONITOR_ENABLED:-true}"

echo "Claude Code Hook configuration loaded ✅"
echo "Notifications: $CLAUDE_NOTIFY_ENABLED"
echo "Auto tests: $CLAUDE_AUTO_TEST_ENABLED"  
echo "Security scan: $CLAUDE_SECURITY_SCAN_ENABLED"
echo "GitHub integration: $CLAUDE_GITHUB_INTEGRATION"