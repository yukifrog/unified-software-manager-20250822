# Gemfile for monitoring Ruby presentation & documentation tools
# Focus on Jekyll and Rabbit for static site generation and presentations
# This is a monitoring file for Dependabot - not for actual bundle install

source 'https://rubygems.org'

ruby '3.1.0'  # Common Ruby version for monitoring

# ðŸŽ¨ Static Site Generation & Presentation Tools
gem 'jekyll', '~> 4.3.0'               # Static site generator for blogs/docs
gem 'rabbit', '~> 3.0.3'               # Ruby-based presentation tool
gem 'rdoc', '~> 6.14.2'                # Ruby documentation generator

# Jekyll ecosystem essentials
gem 'kramdown-parser-gfm', '~> 1.1.0'  # GitHub Flavored Markdown parser for Jekyll
gem 'rouge', '~> 4.4.0'                # Syntax highlighting for Jekyll
gem 'jekyll-feed', '~> 0.17.0'         # RSS/Atom feed generator for Jekyll

group :development do
  # Jekyll development utilities
  gem 'jekyll-compose', '~> 0.12.0'    # Jekyll post/page creation helpers
end